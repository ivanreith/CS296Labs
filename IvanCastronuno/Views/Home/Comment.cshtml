@model CommentModel
@{
    ViewData["Title"] = "Comment";
}

<h1>Edit</h1>

@{
    string title = ViewBag.Action + " Story";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="CommentText">Title</label>
        <input asp-for="CommentText" class="form-control">
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>


    <input type="hidden" asp-for=" CommentId" value=@Model.CommentId />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Stories"
       class="btn btn-primary">Cancel</a>
</form>
